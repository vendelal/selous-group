<article class="contact-form">

  <a id="contact"></a>

  <h2 class="contact-form__title">
    Contact Us
  </h2>

  <p class="contact-form__description">
    We look forward to working with you to help you meet your needs
    in this extraordinary time.
  </p>

  <form
    name="contact"
    method="POST"
    data-netlify="true"
    class="contact-form__form"
    data-aos="fade-up"
    data-aos-duration="1000"
    data-aos-offset="5">

    <div class="contact-form__input-wrapper">
      <label for="name" class="contact-form__label">
        Your Name
      </label>

      <input type="text" name="name" />
    </div>

    <div class="contact-form__input-wrapper">
      <label for="email" class="contact-form__label">
        Your Email
      </label>

      <input type="email" name="email" />
    </div>

    <div class="contact-form__input-wrapper">
      <label for="message" class="contact-form__label">
        Message
      </label>

      <textarea name="message" rows="6"></textarea>
    </div>

    <button type="submit" class="button contact-form__button">Send</button>

  </form>
</article>
